<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dashbord_background"
    android:orientation="vertical"
    tools:context=".activity.DashBordActivity">


    <LinearLayout
        android:id="@+id/ad"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_200sdp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_40sdp"
        android:background="@drawable/ad"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/ad"
            android:textColor="@color/p"
            android:textSize="@dimen/_20ssp"
            android:textStyle="bold" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_15sdp">

        <ImageView
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_70sdp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/all_video_downloader_text" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp">

            <ImageView
                android:id="@+id/imgAllVideoDownloader"
                android:layout_width="@dimen/_130sdp"
                android:layout_height="@dimen/_200sdp"
                android:layout_alignParentStart="true"
                android:src="@drawable/all_video_downloader" />

            <ImageView
                android:id="@+id/imgAllVideoPlayer"
                android:layout_width="@dimen/_130sdp"
                android:layout_height="@dimen/_200sdp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/all_video_player" />


        </RelativeLayout>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_70sdp"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:background="@drawable/menu_background"
        android:gravity="center"
        android:weightSum="4">

        <ImageView
            android:id="@+id/imgShare"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_55sdp"
            android:layout_weight="1"
            android:src="@drawable/share_icon" />

        <ImageView
            android:id="@+id/imgRate"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_55sdp"
            android:layout_weight="1"
            android:src="@drawable/rate_icon" />

        <ImageView
            android:id="@+id/imgMore"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_55sdp"
            android:layout_weight="1"
            android:src="@drawable/more_icon" />

        <ImageView
            android:id="@+id/imgPrivacy"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_55sdp"
            android:layout_weight="1"
            android:src="@drawable/privacy_icon" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/shortad"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60sdp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/ad"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/ad"
            android:textColor="@color/white"
            android:textSize="@dimen/_15ssp"
            android:textStyle="bold" />

    </LinearLayout>


</LinearLayout>